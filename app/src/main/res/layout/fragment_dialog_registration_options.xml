<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/textViewConsumer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:textColor="@color/textColorPrimary"
        android:textAlignment="center"
        android:drawableTop="@drawable/ic_cart_big_accent"
        android:drawablePadding="5dp"
        android:text="@string/new_consumer" />

    <TextView
        android:id="@+id/textViewDriver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:textColor="@color/textColorPrimary"
        android:textAlignment="center"
        android:drawableTop="@drawable/ic_delivery_options_big_accent"
        android:drawablePadding="5dp"
        android:text="@string/new_driver" />
</LinearLayout>